{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],

  "env": {
    "VITE_APP_ENV": "production",
    "VITE_API_BASE_URL": "/api"
  }
}
